<%= form_with(model: keyword, local: true) do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :keyword_name %>
  </div>

  <div class="field">
    <%= form.label 'Signs' %>
    <%= hidden_field_tag("keyword[sign_ids][]", nil) %>
    <div class='form-row'>
      <% Sign.order(:name).each do |sign| %>
        <div class='form-check form-check-inline w-25'>
	  <label class='form-check-label'>
	    <%= check_box_tag "keyword[sign_ids][]", sign.id, false, class: 'form-check-input' %><%= sign.name %>
	  </label>
        </div>
      <% end %>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

<% end %>
