<p id="notice"><%= notice %></p>

<h1>News Hits</h1>

<table>
  <thead>
    <tr>
      <th>News source</th>
      <th>Keyword</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_hits.each do |news_hit| %>
      <tr>
        <td><%= news_hit.news_source %></td>
        <td><%= news_hit.keyword %></td>
        <td><%= link_to 'Show', news_hit %></td>
        <td><%= link_to 'Edit', edit_news_hit_path(news_hit) %></td>
        <td><%= link_to 'Destroy', news_hit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Hit', new_news_hit_path %>
